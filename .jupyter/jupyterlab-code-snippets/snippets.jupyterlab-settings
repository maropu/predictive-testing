            "language": "Python",
            "code": [
                "def compute_mi(X, y):",
                "    from minepy import MINE",
                "    results = []",
                "    mine = MINE(alpha=0.6, c=15, est=\"mic_approx\")",
                "",
                "    for c in X.columns:",
                "        mine.compute_score(y, X[c])",
                "        results.append(((target, c), mine.mic()))",
                "",
                "    return sorted(results, key=lambda x: x[1], reverse=True)"
            ],
